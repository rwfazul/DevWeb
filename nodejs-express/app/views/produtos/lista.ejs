<!DOCTYPE html>
<html>
<head>
	<title>Listagem de produtos</title>

	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<!-- Bootstrap core CSS -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
	<!-- Material Design Bootstrap -->
	<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/css/mdb.min.css" rel="stylesheet">
	<style>
		table .id {
			vertical-align: middle;
		}

		table .col-btns {
			display: flex;
		}

		table .btn.btn-table {
			min-width: 90px;
		}
	</style>
</head>
<body>
	<table class="table table-striped table-hover table-responsive-md btn-table w-auto">
		<thead class="mdb-color darken-3">
			<tr class="text-white">
				<th>#</th>
				<th>Título</th>
				<th>Descrição</th>
				<th>Preço</th>
				<th>Ações</th>
			</tr>
		</thead>
		<% if ( locals.produtos ) { %>
			<tbody>
				<% produtos.forEach(function(produto) { %>
				<tr>
					<th scope="row" class="id"><%= produto.id %></th>
					<td><%= produto.titulo %></td>
					<td><%= produto.descricao %></td>
					<td><%= produto.preco %></td>
					<td class="col-btns">
						<a href="/produtos/<%= produto.id %>" class="btn btn-sm btn-rounded btn-table btn-info my-0">Ver</a>		
						<form method="post" action="/produtos?_method=DELETE" enctype="application/x-www-form-urlencoded">
							<input type="hidden" name="id" value="<%= produto.id %>" />
	 						<button type="submit" class="btn btn-sm btn-rounded btn-table btn-danger my-0">Remover</button>
						</form>
					</td>
				</tr>
				<% }); %>
			</tbody>
		</table>
		<% } else { %>
		</table>
			<p>Nenhum produto cadastrado</p>
		<% } %>	

	<!-- JQuery -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<!-- Bootstrap tooltips -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
	<!-- Bootstrap core JavaScript -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
	<!-- MDB core JavaScript -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.4/js/mdb.min.js"></script>
</body>
</html>

